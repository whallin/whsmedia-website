---
interface Props {
	title: string;
}

const { title } = Astro.props;

import SiteHead from '../components/SiteHead.astro';
---

<!DOCTYPE html>
<html lang="sv">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width,initial-scale=1" />
		<title>{title} - WHS Media</title>
		<meta property="og:title" content=`${title} - WHS Media` />
		<meta property="twitter:title" content=`${title} - WHS Media` />
		<meta name="author" content="WHS Media" />
		<SiteHead />
	</head>
	<body>
		<main class="xl:h-screen flex items-center justify-center py-4 lg:py-8 px-8">
			<slot />
		</main>
	</body>
</html>